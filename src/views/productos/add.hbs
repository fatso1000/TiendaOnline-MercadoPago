<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/productos/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre_producto" class="form-control" placeholder="Nombre del producto" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="number" name="stock" class="form-control" placeholder="Stock">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="text" name="categoria" class="form-control" placeholder="Categoria">
                        </div>
                        <div class="form-group">
                            <input type="number" name="precio" class="form-control" placeholder="Precio" min="1" step="any">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">SAVE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>