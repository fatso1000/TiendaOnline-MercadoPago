<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/productos/edit/{{productos.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre_producto" class="form-control" placeholder="{{productos.nombre_producto}}" value="{{productos.nombre_producto}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="number" name="stock" class="form-control" placeholder="{{productos.stock}}" value="{{productos.stock}}">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="{{productos.description}}">{{productos.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <input type="text" name="categoria" class="form-control" placeholder="{{productos.categoria}}" value="{{productos.categoria}}">
                        </div>
                        <div class="form-group">
                            <input type="number" name="precio" class="form-control" placeholder="{{productos.precio}}" value="{{productos.precio}}">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">SAVE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>