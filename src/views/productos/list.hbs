<div class="container p-4">
    <div class="row">

        {{!-- QUE RECORRA CADA REGISTRO DE PRODUCTOS --}}
        {{#each productos}}
        
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <a>
                            <h3 class="card-title text-uppercase">
                                {{nombre_producto}}
                            </h3>
                        </a>
                        
                        <p class="m-2">{{description}}</p>
                        <p>{{categoria}}</p>
                        <p class="display-4">${{precio}}</p>
                        <p>{{timeago created_at}}</p>
                        
                        
                        <a href="/productos/delete/{{id}}" class="btn btn-danger">DELETE</a>
                        <a href="/productos/edit/{{id}}" class="btn btn-seconday">EDIT</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay links creados.</p>
                    <a href="/productos/add" class="btn btn-success">Crear uno</a>
                </div>
            </div>

        {{/each}}

    </div>
</div>