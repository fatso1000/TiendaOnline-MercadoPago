<div class="container p-4">
    <div class="row">

        {{!-- QUE RECORRA CADA REGISTRO DE PRODUCTOS --}}
        {{#each productos}}
            <div class="col-md-3">
                <div class="card text-center">

                    {{#iff stock '==' 0}}
                    <a href="/productos/tienda/{{id}}" class="">
                         <div class="card-body">
                            <h3 class="card-title text-uppercase">
                                {{nombre_producto}}
                            </h3>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>
                        <p>No hay stock</p>
                    </div>
                    </a>
                    {{else}}
                    <a href="/productos/tienda/{{id}}" class="">
                         <div class="card-body">
                            <h3 class="card-title text-uppercase">
                                {{nombre_producto}}
                            </h3>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>
                    </div>
                    </a>
                   {{/iff}}
                </div>
            </div>
        {{/each}}

    </div>
</div>