<div class="container p-4">
    <div class="row">
            <div class="col-md-3 mx-auto">
                <div class="card text-center">
                    <div class="card-body">
                            <h3 class="card-title text-uppercase">
                                {{producto.nombre_producto}}
                            </h3>
                        <p class="m-2">{{producto.description}}</p>
                        <p>{{timeago created_at}}</p>
                            {{!-- Comprueba el stock y muestra distintas vistas --}}
                            {{#iff producto.stock '!=' 0}}
                            <form action="/carrito/add/{{producto.id}}" method="POST">
                            <div class="form-group">
                                <input type="number" name="cantidad" class="" placeholder="Cantidad" max="{{producto.stock}}">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block">AÃ±adir a carrito</button>
                            </div>
                            </form>
                            
                            {{else}}
                            <div class="form-group">
                                <p>No existe stock en este momento</p>
                                <a href="/productos/tienda" class="btn btn-primary btn-block">Volver</a>
                            </div>
                            {{/iff}}
                    </div>
                </div>
            </div>
    </div>
</div>